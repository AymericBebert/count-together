{
  "name": "count-together",
  "version": "1.0.0",
  "description": "Count Together SPA/PWA",
  "repository": {
    "type": "git",
    "url": "https://github.com/AymericBebert/count-together"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:stats": "ng build --stats-json",
    "build:serve": "ng build && npx http-server -p 4500 -c-1 dist/count-together/browser",
    "build:dev": "ng build --configuration development",
    "test": "ng test",
    "test:ci": "ng test --code-coverage --watch=false --browsers ChromeHeadlessNoSandbox",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "extract": "ngx-translate-extract --input './src/**/!(*.spec).{html,ts}' --output ./src/assets/i18n/{en,fr}.json --clean --sort --format namespaced-json --format-indentation '  ' --string-as-default-value 'MISSING_TRANSLATION'"
  },
  "author": "Aymeric BERNARD",
  "license": "MIT",
  "dependencies": {
    "@angular/animations": "^20.3.15",
    "@angular/cdk": "^20.2.14",
    "@angular/common": "^20.3.15",
    "@angular/compiler": "^20.3.16",
    "@angular/core": "^20.3.15",
    "@angular/forms": "^20.3.15",
    "@angular/material": "^20.2.14",
    "@angular/platform-browser": "^20.3.15",
    "@angular/platform-browser-dynamic": "^20.3.15",
    "@angular/router": "^20.3.15",
    "@angular/service-worker": "^20.3.15",
    "@ngx-translate/core": "^17.0.0",
    "d3": "~7.9.0",
    "rxjs": "~7.8.2",
    "socket.io-client": "~4.8.3",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.13",
    "@angular/cli": "^20.3.13",
    "@angular/compiler-cli": "^20.3.15",
    "@angular/language-service": "^20.3.15",
    "@biesbjerg/ngx-translate-extract-marker": "^1.0.0",
    "@eslint/js": "~9.39.2",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/d3": "~7.4.3",
    "@types/dom-mediacapture-record": "^1.0.22",
    "@types/jasmine": "~5.1.13",
    "@types/node": "^24.10.4",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@vendure/ngx-translate-extract": "^10.1.2",
    "angular-eslint": "20.7.0",
    "eslint": "~9.39.2",
    "jasmine-core": "~5.13.0",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "ts-node": "~10.9.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.50.1"
  }
}
